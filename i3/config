font pango:Input Mono 11
### VARIABLES ###
# Mod Key
set $mod Mod4
set $terminal termite 
set $wallpaper bg.jpg

# VIM directions
set $up k
set $down j
set $left h
set $right l

set $upp i
set $downn u
set $leftt y
set $rightt o

#MONITORS
set $rmonitor HDMI-0
set $lmonitor DVI-0

# Workspaces
set $workspace1 "1:web"
set $workspace2 "2:shell"
set $workspace3 "3:code"
set $workspace4 "4:tools"
set $workspace6 "6:other"
set $workspace5 "5:other"
set $workspace7 "7:other"
set $workspace8 "8:other"
set $workspace9 "9:other"
set $workspace10 "10:other"

# Modes
set $modepower "ï€‘"

## KEYBINDINGS

# Numbers
bindsym $mod+u                                  workspace $workspace1
bindsym $mod+Shift+u                            move container to workspace $workspace1
bindsym $mod+i                                  workspace $workspace2
bindsym $mod+Shift+i                            move container to workspace $workspace2
bindsym $mod+o                                  workspace $workspace3
bindsym $mod+Shift+o                            move container to workspace $workspace3
bindsym $mod+p                                  workspace $workspace4
bindsym $mod+Shift+p                            move container to workspace $workspace4
bindsym $mod+braceleft                          workspace $workspace5
bindsym $mod+Shift+braceleft                    move container to workspace $workspace5
bindsym $mod+7                                  workspace $workspace6
bindsym $mod+Shift+7                            move container to workspace $workspace6
bindsym $mod+8                                  workspace $workspace7
bindsym $mod+Shift+8                            move container to workspace $workspace7
bindsym $mod+9                                  workspace $workspace8
bindsym $mod+Shift+9                            move container to workspace $workspace8
bindsym $mod+0                                  workspace $workspace9
bindsym $mod+Shift+0                            move container to workspace $workspace9
bindsym $mod+minus                              workspace $workspace10
bindsym $mod+Shift+minus                        move container to workspace $workspace10
        

# Letters
bindsym $mod+a                                  move workspace to output left
bindsym $mod+Shift+c                            reload
bindsym $mod+d                                  exec rofi -show run -show-icons -drun-icon-theme Paper -auto-select
bindsym $mod+Shift+d                            exec code
bindsym $mod+e                                  layout toggle split
bindsym $mod+f                                  fullscreen toggle
bindsym $mod+m                                  split h 
bindsym $mod+n                                  split v
bindsym $mod+q                                  kill
bindsym $mod+r                                  restart
bindsym $mod+Shift+r                            reload
bindsym $mod+s                                  move workspace to output right
bindsym $mod+w                                  layout tabbed

bindsym $mod+1                                  exec firefox; workspace $workspace1
bindsym $mod+2                                  exec fish -c polystart
bindsym $mod+3					exec shell /home/vrelda/.config/wpg/wp_init.sh

# Other
bindsym $mod+Return                             exec $terminal
bindsym $mod+Shift+Return                       exec $terminal -e ranger
bindsym $mod+$left                              focus left
bindsym $mod+Shift+$left                        move left
bindsym $mod+$down                              focus down
bindsym $mod+Shift+$down                        move down
bindsym $mod+$up                                focus up
bindsym $mod+Shift+$up                          move up
bindsym $mod+$right                             focus right
bindsym $mod+Shift+$right                       move right

bindsym $mod+space                              focus mode_toggle
bindsym $mod+Shift+space                        floating toggle

bindsym $mod+Escape                             mode $modepower

bindsym XF86AudioRaiseVolume                    exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume                    exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute                           exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

bindsym XF86MonBrightnessUp                     exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown                   exec xbacklight -dec 20 # decrease screen brightness
bindsym XF86TouchpadToggle                      exec ~/.i3/toggletouchpad.sh # toggle touchpad
bindsym XF86AudioPlay                           exec playerctl play
bindsym XF86AudioPause                          exec playerctl pause
bindsym XF86AudioNext                           exec playerctl next
bindsym XF86AudioPrev                           exec playerctl previous

bindsym $mod+Tab exec rofi -show window -show-icons -drun-icon-theme Paper -auto-select
bindsym $mod+Shift+Tab workspace next

mode $modepower {
        bindsym j mode "default",               exec --no-startup-id i3exit lock
        bindsym k mode "default",               exit
        bindsym l mode "default",               exec --no-startup-id shutdown now
        bindsym semicolon mode "default",       exec --no-startup-id reboot

        bindsym Escape mode "default"
        bindsym Return mode "default"
}
default_border pixel 2
set $c1 #c7cac8
set $c2 #fdfffe 
set $c3 #A68E68
set $c4 #e9bc75 
set $c5 #1d2738
set $c6 #8cba85
set $c7 #10151e

# class                 border  backgr. text indicator child_border
client.focused          $c4     $c4     $c7  $c4       $c4
client.focused_inactive $c5     $c3     $c1  $c5       $c5
client.unfocused        $c5     $c3     $c1  $c5       $c5
client.urgent           $c6     $c6     $c5  $c6       $c6
client.placeholder      $c5     $c5     $c1  $c5       $c5

client.background       $c5

### GAPS ###
gaps inner 0
gaps outer 0
floating_modifier $mod
hide_edge_borders smart
### WORKSPACE SETTINGS ###

for_window [class="Firefox"]                    move to workspace $workspace1
assign [class="Code"]                           workspace $workspace3
assign [class="Thunderbird"]                    workspace $workspace4
for_window [class="Spotify"]                    move to workspace $workspace4    
assign [class="^.*"]                            workspace $workspace5
for_window [class="^.*"]                        border pixel 2
for_window [class="^((?!Spotify).)*$"]		focus 
focus_follows_mouse no
### ASSIGNS
workspace $workspace1 output $lmonitor
workspace $workspace2 output $rmonitor
workspace $workspace3 output $rmonitor
workspace $workspace4 output $lmonitor
workspace $workspace5 output $rmonitor
workspace $workspace6 output $rmonitor
workspace $workspace7 output $rmonitor
workspace $workspace8 output $rmonitor
workspace $workspace9 output $rmonitor
workspace $workspace10 output $rmonitor

### STARTUP ###
exec bash ~/.config/i3/startup.sh
exec_always bash ~/.config/i3/always.sh
